<!doctype html>
	<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Document</title>
		<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
		<script type="text/javascript">
			$(function(){
				$(window).scroll(function(event){
					if(document.body.style.overflow!="hidden"&&document.body.scroll!="no"&&document.body.scrollTop>0) {
					   $("#returnTop").css("display","block");
					} else {
					$("#returnTop").css("display","none");
					}
				});
			});
		</script>
	</head>
	<body>
  	<footer>
  		<div>
  			<script>
  				$(function(){
  					$('#returnTop').click(function () {
  					    $('html,body').animate({ scrollTop: '0px' }, 0);
  					    return false;
  					});
  				})
  			</script>
  			<style>
  				#returnTop{
  				    width: 36px;
  				    height: 34px;
  				    position: fixed;
  				    bottom: 19px;
  				    right: 70px;
  				    background: transparent url(./images/gotoTop.png) -4px -4px no-repeat;
  				}
  				#returnTop:hover{
  					background:transparent url(./images/gotoTop.png) -77px -4px no-repeat;
  				}
  			</style>
  			<a id="returnTop" href="" type="" title="go to top" ></a>
  		</div>
  	</footer>
	</body>
	</html>
